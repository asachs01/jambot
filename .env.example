# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...

# ============================================================================
# Jambot Configuration (Discord Bot for Bluegrass Jam Setlists)
# ============================================================================

# Discord Configuration
DISCORD_BOT_TOKEN="your_discord_bot_token_here"        # Required: Discord bot token from Developer Portal
DISCORD_JAM_LEADER_ID="123456789012345678"             # Optional (Legacy): Use /jambot-setup command instead
DISCORD_ADMIN_ID="123456789012345678"                  # Optional (Legacy): Use /jambot-setup command instead

# Spotify Configuration
SPOTIFY_CLIENT_ID="your_spotify_client_id_here"        # Required: From Spotify Developer Dashboard
SPOTIFY_CLIENT_SECRET="your_spotify_client_secret"     # Required: From Spotify Developer Dashboard
SPOTIFY_REDIRECT_URI="http://127.0.0.1:8888/callback"  # Local: http://127.0.0.1:8888/callback, Production: https://your-app.ondigitalocean.app/callback
SPOTIFY_REFRESH_TOKEN="your_spotify_refresh_token"     # Optional: For local dev only. Production uses web auth flow.

# Optional: Jambot Database and Logging
# DATABASE_PATH="/app/data/jambot.db"                  # Optional: SQLite database path
# LOG_LEVEL="INFO"                                     # Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_FILE="/app/logs/jambot.log"                      # Optional: Log file path
# PORT="8080"                                          # Optional: Web server port (default: 8080)